<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="fragment"
            type="de.pottcode.mindbell.schedule.view.ScheduleBellFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".schedule.view.ScheduleBellFragment">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_schedule_time_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play Bell from"
            app:layout_constraintStart_toStartOf="parent"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:onClick="@{() -> fragment.showTimePickerDialog()}"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>